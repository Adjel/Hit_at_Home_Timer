<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:clickable="false"
    android:contextClickable="false">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_item_session"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:strokeWidth="0dp"
        app:strokeColor="@color/khaki_web"
        app:cardBackgroundColor="@color/independence"
        app:cardCornerRadius="@dimen/scale_14dp"
        app:cardElevation="@dimen/scale_10dp"
        app:cardUseCompatPadding="true"
        android:focusable="false"
        android:clickable="true"
        android:contextClickable="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_item_session_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_textview_margin_start"
                android:clickable="false"
                android:contextClickable="false"
                android:ellipsize="middle"
                android:focusable="false"
                android:paddingTop="@dimen/item_workout_recyclerview_padding_5dp"
                android:paddingBottom="@dimen/item_workout_recyclerview_padding_5dp"
                android:singleLine="true"
                android:text="Training 1"
                android:textColor="@color/ivory"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Training 1" />

            <TextView
                android:id="@+id/text_view_item_session_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:clickable="false"
                android:contextClickable="false"
                android:ellipsize="middle"
                android:focusable="false"
                android:paddingTop="@dimen/item_workout_recyclerview_padding_5dp"
                android:paddingBottom="@dimen/item_workout_recyclerview_padding_5dp"
                android:singleLine="true"
                android:text="10:00"
                android:textColor="@color/khaki_web_bone"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="@id/text_view_item_session_name"
                app:layout_constraintEnd_toStartOf="@id/image_button_menu_item_session"
                app:layout_constraintTop_toTopOf="@id/text_view_item_session_name"
                tools:text="12:00" />

            <ImageButton
                android:id="@+id/image_button_menu_item_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/item_menu_button_margin_end"
                android:backgroundTint="@color/independence"
                android:clickable="true"
                android:contextClickable="false"
                android:focusable="true"
                android:src="@drawable/ic_more_white"
                app:layout_constraintBottom_toBottomOf="@id/text_view_item_session_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_view_item_session_name"
                app:tint="@color/ivory" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>